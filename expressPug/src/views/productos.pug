- let exist = productos.length>0

html 
    head
        link(rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
        style
             include ../public/styles.css
        title="Registro de productos"
    body
        input(class="redirect" type="button" onclick="location.href='/'" value="Registra un producto")
        if exist
            table(class="table table-striped table-dark table-hover table-bordered contenedor-productos")
                  tr
                     th(scope="col")="Nombre"
                     th(scope="col")="Precio"
                     th(scope="col")="Foto"               
                  
                  each producto in productos
                       tr
                           td=producto.title
                           td="$"+producto.price
                           td
                              img(class="img-producto" src=producto.thumbnail)
        else
            p="No hay productos"
